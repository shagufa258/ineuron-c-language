#include <stdio.h>
void num(int n);
int main()
{int i,j,n=15;
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=2*n-1;j++)
        {
            if(j>=n+1-i && j<=i+n-1)
            {
                printf("*");
                
            }
            else
                printf(" ");
        }
        printf("\n");
    }

}
