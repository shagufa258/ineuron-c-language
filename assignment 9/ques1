/*
1. Write a program which takes the month number as an input and display
number of days in that month.
*/

#include<stdio.h>
int main()
{
   int day;
   printf("enter the no of day - ");
   scanf("%d",&day);
    switch(day){
        case 1:
            printf("monday");
            break;
        case 2:
            printf("tuesday");
            break;
        case 3:
            printf("wednesday"); 
            break;
        case 4:
            printf("thursday");
            break;
        case 5:
            printf("friday");
            break;
        case 6:
            printf("saturday"); 
            break;
        case 7:
        printf("sunday");    
        default:
            printf("enter the correct day");
    }   
    return 0;        
}
