*******************************************************************************/
/*
3. Write a program which takes the day number of a week and displays a
unique greeting message for the day.

*/
#include<stdio.h>
int main()
{
   int day;
   printf("enter the no of day - ");
   scanf("%d",&day);
    switch(day){
        case 1:
            printf("hello this is monday today");
            break;
        case 2:
            printf("hello this is tuesday");
            break;
        case 3:
            printf("hello this is wednesday"); 
            break;
        case 4:
            printf("hello this is thursday");
            break;
        case 5:
            printf("hello this isfriday");
            break;
        case 6:
            printf("hello this is saturday"); 
            break;
        case 7:
        printf("hello this is sunday");    
        default:
            printf("enter the correct day");
    }   
    return 0;        
}
