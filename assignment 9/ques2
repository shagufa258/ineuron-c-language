/*2. Write a menu driven program with the following options:
a. Addition
b. Subtraction
c. Multiplication
d. Division
e. Exit*/


#include <stdio.h>

int main()
{
   int option,a,b;
   printf("enter what do you want to calculate?\n1-Addition\n2-Subtraction\n3-Multiplication\n4-Division\n5-Exit\n");
   scanf("%d",&option);
    switch(option){
        case 1:
            scanf("%d%d",&a,&b);
            printf("result= %d",a+b);
            break;
        case 2:
            scanf("%d%d",&a,&b);
            printf("result= %d",a-b);
            break;
        case 3:
            scanf("%d%d",&a,&b);
            printf("result= %d",a*b); 
            break;
        case 4:
            scanf("%d%d",&a,&b);
            printf("result= %d",a/b);
            break;
        case 5:
            break;
           
        default:
            printf("enter the correct option");
    }   
    return 0;        
}
