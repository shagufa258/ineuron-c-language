/*4. Write a program to find the greatest number stored in an array of size n. Take array
values from the user.*/

#include <stdio.h>

int main()
{int n,a[100],max=0;
     printf("enter size of array");
    scanf("%d",&n);
     
     
     for(int i=0; i<n;i++)
     {
          scanf("%d",&a[i]);
         
     }
     
     
     for(int i=0; i<n;i++)
     {
       
       
          printf("%d ",a[i]);
          if(a[i]>0)
           max=a[i];
        
     }
    
      printf("\nMax = %d ",max);
   
     return 0;
}
